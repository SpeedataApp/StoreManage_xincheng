<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bj_xc" >

    <LinearLayout
        android:id="@+id/login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/bg_title_bar"
        android:orientation="vertical"
        android:paddingBottom="20dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:paddingTop="20dip" >

        <EditText
            android:id="@+id/mUserName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input"
            android:hint="请输入用户名"
            android:padding="5dip"
            android:singleLine="true"
            android:textSize="@dimen/title_size" />

        <EditText
            android:id="@+id/mPwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/bg_input"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:padding="5dip"
            android:singleLine="true"
            android:textSize="@dimen/title_size" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:orientation="horizontal"
            android:weightSum="2" >

            <CheckBox
                android:id="@+id/mMindPwd"
                style="@style/MyCheckBox2"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="记住密码"
                android:textColor="#636363"
                android:textSize="@dimen/node_one" />

            <CheckBox
                android:id="@+id/mMindLogin"
                style="@style/MyCheckBox2"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="自动登录"
                android:textColor="#636363"
                android:textSize="@dimen/node_one" />
        </LinearLayout>

        <Button
            android:id="@+id/mLogin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/common_button_pressed"
            android:padding="5dip"
            android:text="登录"
            android:textColor="#636363"
            android:textSize="@dimen/title_size" />

        <Button
            android:id="@+id/mForceExit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/common_button_pressed"
            android:padding="5dip"
            android:text="强制退出"
            android:textColor="#636363"
            android:textSize="@dimen/title_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/failText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="失败原因"
            android:textColor="@color/red"
            android:textSize="@dimen/node_one"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/compn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:text="文彦科技 "
        android:textColor="#636363"
        android:textSize="@dimen/node_one"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_marginTop="20dip"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本"
            android:textColor="#636363"
            android:textSize="@dimen/node_one" />

        <TextView
            android:id="@+id/mVer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="vxxx"
            android:textColor="#636363"
            android:textSize="@dimen/node_one" />

    </LinearLayout>

    <Button
        android:id="@+id/setIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/login"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_style_alert_dialog_button"
        android:padding="5dip"
        android:text="配置服务器IP"
        android:visibility="gone"
        android:textSize="@dimen/title_size" />

</RelativeLayout>